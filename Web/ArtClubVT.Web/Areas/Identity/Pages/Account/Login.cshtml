@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="row width-60">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <h1 class="text-white center" >Вход в магазина</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group text-white">
                    <label asp-for="Input.Email">Имейл</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group text-white">
                    <label asp-for="Input.Password">Парола</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-white">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Запомни ме?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success center">Вход</button>
                </div>
                <div class="form-group flex text-center center">
                    <p class="margin-right ">
                        <a class="text-white" id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                    </p>
                    <p class="margin-right ">
                        <a class="text-white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
