@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравили сте паролата си?";
}

<h1 class="text-white">@ViewData["Title"]</h1>
<h4 class="text-white center">Няма проблем! Въведете си имейла и ще Ви пратим съобщение синструкции за създаване на нова парола!</h4>
<hr />
<div class="row center">
    <div class="col-md-4 text-white">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Имейл</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Изпращане</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
