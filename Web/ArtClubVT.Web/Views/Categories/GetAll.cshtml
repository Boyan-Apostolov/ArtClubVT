@using ArtClubVT.Common
@model ICollection<CategoryViewModel>
@{
    this.ViewData["Title"] = "Категории";
}

<div class="text-center">
    <h1 class="display-4 text-white">Всички категории в  @GlobalConstants.SystemName!</h1>
    <ul class="list-group categories-list">
        @foreach (var category in Model)
        {
            <li class="list-group-item curvy-edges"><i class="fas fa-list"></i><a asp-area="" asp-controller="Items" asp-action="GetItemsByCategoryName" asp-route-categoryName="@category.Name">@category.Name</a></li>
        }
    </ul>
</div>
