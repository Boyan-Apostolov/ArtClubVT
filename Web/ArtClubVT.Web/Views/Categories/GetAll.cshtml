@using ArtClubVT.Common
@model ICollection<CategoryViewModel>
@{
    this.ViewData["Title"] = "Категории";
}

<div class="text-center">
    <h1 class="display-4">Всички категории в  @GlobalConstants.SystemName!</h1>
    @foreach (var category in Model)
    {
        <p><a asp-area="" asp-controller="Items" asp-action="GetItemsByCategoryName" asp-route-categoryName="@category.Name">@category.Name</a></p>
    }

</div>
